{
  "name": "llrem",
  "version": "0.1.0",
  "description": "LLM Retrospective Engine: Scans agent transcripts, finds struggle patterns, and suggests diff-ready fixes.",
  "keywords": [
    "llm",
    "observability",
    "claude",
    "ai-agent",
    "cli",
    "dev-tools",
    "prompt-engineering",
    "retrospective"
  ],
  "license": "MIT",
  "author": "Daniel G Wilson <daniel@danielgwilson.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielgwilson/llrem.git"
  },
  "homepage": "https://github.com/danielgwilson/llrem#readme",
  "bugs": {
    "url": "https://github.com/danielgwilson/llrem/issues"
  },
  "type": "module",
  "main": "./dist/cli.cjs",
  "module": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "llrem": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup src/cli.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "prepublishOnly": "pnpm run build && pnpm run test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.22.0",
    "@oclif/core": "^3.26.0",
    "chalk": "^5.3.0",
    "jsdiff": "^5.2.0",
    "json-diff-ts": "^1.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsdiff": "^5.0.0",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^9.4.0",
    "tsup": "^8.1.0",
    "tsx": "^4.15.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
