{
  "name": "llrem",
  "version": "0.1.0",
  "description": "LLM Retrospective Engine: Scans agent transcripts, finds struggle patterns, and suggests diff-ready fixes.",
  "keywords": [
    "llm",
    "observability",
    "claude",
    "ai-agent",
    "cli",
    "dev-tools",
    "prompt-engineering",
    "retrospective"
  ],
  "license": "MIT",
  "author": "Daniel G Wilson <daniel@danielgwilson.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielgwilson/llrem.git"
  },
  "homepage": "https://github.com/danielgwilson/llrem#readme",
  "bugs": {
    "url": "https://github.com/danielgwilson/llrem/issues"
  },
  "type": "module",
  "main": "./dist/cli.cjs",
  "module": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "bin": {
    "llrem": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup src/cli.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.ts'",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@oclif/core": "^4.5.0",
    "chalk": "^5.4.1",
    "ink": "^6.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.14.6",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.30.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
